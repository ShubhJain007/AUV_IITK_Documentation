git clone git@github.com:sonia-auv/ros_sonia_ws.git $ROS_SONIA_WS
cd $ROS_SONIA_WS
git checkout develop
$ROS_SONIA_WS/git_update.sh
sudo ldconfig

## apply patch
cd ~
mkdir patch
cd patch
wget http://sonia-auv.readthedocs.org/assets/files/melodic_18.04/patch.tar.gz -O ./patch.tar.gz
tar -xvf ./patch.tar.gz
sudo patch /usr/include/mlpack/methods/kmeans/kmeans_impl.hpp kmeans.patch
sudo patch /opt/ros/kinetic/include/opencv-3.3.1-dev/opencv2/core/traits.hpp traits.patch
if [ ! -f ~/.config/pip/pip.conf ]; then
    patch ~/.config/pip/pip.conf pip_conf.patch
fi


## ask for the sonia version
echo "Quelle version du script vous voulez installer? (Si vous ne savez pas quoi prendre, prenez Devel)"
select ask in "Devel" "Prod" "Jetson" "Annuler"; do
    case $ask in
        Devel ) wget http://sonia-auv.readthedocs.org/assets/files/melodic_18.04/bash_sonia_dev -O ./.bash_sonia
                pip2 install -r $ROS_SONIA_WS/requirements/develop.txt
                break;;
        Sub )  wget http://sonia-auv.readthedocs.org/assets/files/melodic_18.04/bash_sonia_prod -O ./.bash_sonia
                pip2 install -r $ROS_SONIA_WS/requirements/prod.txt
                break;;
	Jetson) wget http://sonia-auv.readthedocs.org/assets/files/melodic_18.04/jetson_consumption.sh -O ./jetson_consumption.sh
		wget http://sonia-auv.readthedocs.org/assets/files/melodic_18.04/bash_sonia_jetson -O ./.bash_sonia
		break;;
        Annuler ) break;;
    esac
done

cd ..
rm -rf patch
cd $ROS_SONIA_WS

## setup ros
sudo rosdep init
rosdep update

## compile
catkin_make -j8 -DCMAKE_CXX_FLAGS="-O2"
source devel/setup.bash
